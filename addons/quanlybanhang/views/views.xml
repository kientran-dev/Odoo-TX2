<odoo>
    <data>
        <!-- Hang Views -->
        <record id="hang_view_tree" model="ir.ui.view">
            <field name="name">hang.view.tree</field>
            <field name="model">hang</field>
            <field name="arch" type="xml">
                <tree string="Danh sách hãng">
                    <field name="tenhang"/>
                    <field name="mahang"/>
                    <field name="diachi"/>
                    <field name="sodt"/>
                </tree>
            </field>
        </record>

        <record id="hang_view_form" model="ir.ui.view">
            <field name="name">hang.view.form</field>
            <field name="model">hang</field>
            <field name="arch" type="xml">
                <form string="Chi tiết hãng">
                    <sheet>
                        <group>
                            <field name="tenhang"/>
                            <field name="mahang"/>
                            <field name="diachi"/>
                            <field name="sodt"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hang_view_search" model="ir.ui.view">
            <field name="name">hang.view.search</field>
            <field name="model">hang</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tenhang"/>
                    <field name="mahang"/>
                </search>
            </field>
        </record>

        <!-- NhanVien Views -->
        <record id="nhanvien_view_tree" model="ir.ui.view">
            <field name="name">nhanvien.view.tree</field>
            <field name="model">nhanvien</field>
            <field name="arch" type="xml">
                <tree string="Danh sách nhân viên">
                    <field name="tennv"/>
                    <field name="manv"/>
                    <field name="gioitinh"/>
                    <field name="sdt"/>
                </tree>
            </field>
        </record>

        <record id="nhanvien_view_form" model="ir.ui.view">
            <field name="name">nhanvien.view.form</field>
            <field name="model">nhanvien</field>
            <field name="arch" type="xml">
                <form string="Chi tiết nhân viên">
                    <sheet>
                        <group>
                            <field name="tennv"/>
                            <field name="manv"/>
                            <field name="gioitinh"/>
                            <field name="sdt"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="nhanvien_view_search" model="ir.ui.view">
            <field name="name">nhanvien.view.search</field>
            <field name="model">nhanvien</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tennv"/>
                    <field name="manv"/>
                    <filter name="filter_nam" string="Nam" domain="[('gioitinh', '=', 'Nam')]"/>
                    <filter name="filter_nu" string="Nữ" domain="[('gioitinh', '=', 'Nữ')]"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_gioitinh" string="Giới tính" context="{'group_by': 'gioitinh'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- SanPham Views -->
        <record id="sanpham_view_tree" model="ir.ui.view">
            <field name="name">sanpham.view.tree</field>
            <field name="model">sanpham</field>
            <field name="arch" type="xml">
                <tree string="Danh sách sản phẩm">
                    <field name="masp"/>
                    <field name="tensp"/>
                    <field name="soluong"/>
                    <field name="giaban"/>
                    <field name="mausac"/>
                </tree>
            </field>
        </record>

        <record id="sanpham_view_form" model="ir.ui.view">
            <field name="name">sanpham.view.form</field>
            <field name="model">sanpham</field>
            <field name="arch" type="xml">
                <form string="Chi tiết sản phẩm">
                    <sheet>
                        <group>
                            <field name="masp"/>
                            <field name="tensp"/>
                            <field name="soluong"/>
                            <field name="giaban"/>
                            <field name="mausac"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sanpham_view_search" model="ir.ui.view">
            <field name="name">sanpham.view.search</field>
            <field name="model">sanpham</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tensp"/>
                    <field name="masp"/>
                    <filter name="filter_xanh" string="Xanh" domain="[('mausac', '=', 'Xanh')]"/>
                    <filter name="filter_do" string="Đỏ" domain="[('mausac', '=', 'Đỏ')]"/>
                    <filter name="filter_vang" string="Vàng" domain="[('mausac', '=', 'Vàng')]"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_mausac" string="Màu sắc" context="{'group_by': 'mausac'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions -->
        <record id="hang_action_window" model="ir.actions.act_window">
            <field name="name">Quản lý hãng</field>
            <field name="res_model">hang</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="nhanvien_action_window" model="ir.actions.act_window">
            <field name="name">Quản lý nhân viên</field>
            <field name="res_model">nhanvien</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="sanpham_action_window" model="ir.actions.act_window">
            <field name="name">Quản lý sản phẩm</field>
            <field name="res_model">sanpham</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="main_menu_root"
                  name="Quản lý Bán Hàng"
                  sequence="10"/>

        <menuitem id="hang_menu"
                  name="Quản lý hãng"
                  parent="main_menu_root"
                  action="hang_action_window"
                  sequence="10"/>

        <menuitem id="nhanvien_menu"
                  name="Quản lý nhân viên"
                  parent="main_menu_root"
                  action="nhanvien_action_window"
                  sequence="20"/>

        <menuitem id="sanpham_menu"
                  name="Quản lý sản phẩm"
                  parent="main_menu_root"
                  action="sanpham_action_window"
                  sequence="30"/>
    </data>
</odoo>
